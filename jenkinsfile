pipeline {
    agent any

    tools {
        jdk 'jdk21'           // Match Jenkins JDK config
        maven 'maven3.8'      // Match Jenkins Maven config
    }

    environment {
        SERVER_IP    = '15.206.178.136'
        SSH_CRED_ID  = 'jen-new'         // SSH credentials ID in Jenkins
        TOMCAT_PATH  = '/var/lib/tomcat10/webapps'
        TOMCAT_SVC   = 'tomcat10'
    }

    stages {

        stage('Check Environment') {
            steps {
                sh '''
                    echo "===== Checking Environment ====="
                    java -version
                    mvn -version
                    echo "================================"
                '''
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Shivamgarud8/tomcat.git'
            }
        }

        stage('Prepare WebApp Folder') {
            steps {
                sh '''
                    echo "===== Preparing WebApp Structure ====="
                    mkdir -p src/main/webapp
                    # Copy WebContent contents to src/main/webapp
                    cp -r WebContent/* src/main/webapp/
                    echo "Contents of src/main/webapp:"
                    ls -l src/main/webapp/
                    echo "======================================"
                '''
            }
        }

        stage('Build WAR') {
            steps {
                sh '''
                    echo "===== Building WAR File ====="
                    mvn clean package -DskipTests
                    echo "WAR file created at target/"
                    ls -lh target/
                    echo "================================"
                '''
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh """
                        echo "===== Copying WAR File to Remote Server ====="
                        WAR_FILE=\$(ls target/*.war | head -n 1)
                        echo "WAR File to deploy: \$WAR_FILE"
                        scp -v -o StrictHostKeyChecking=no \$WAR_FILE ubuntu@${SERVER_IP}:/tmp/

                        echo "===== Deploying to Tomcat ====="
                        ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} '
                            echo ">>> Stopping Tomcat..."
                            sudo systemctl stop ${TOMCAT_SVC}

                            echo ">>> Removing old ROOT..."
                            sudo rm -rf ${TOMCAT_PATH}/ROOT ${TOMCAT_PATH}/ROOT.war

                            echo ">>> Moving new WAR to Tomcat..."
                            sudo mv /tmp/*.war ${TOMCAT_PATH}/ROOT.war
                            sudo chown tomcat:tomcat ${TOMCAT_PATH}/ROOT.war

                            echo ">>> Starting Tomcat..."
                            sudo systemctl start ${TOMCAT_SVC}
                            echo ">>> Deployment completed successfully!"
                        '
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful! Visit: http://${SERVER_IP}:8080/"
        }
        failure {
            echo "❌ Deployment failed. Check Jenkins logs for more info."
        }
    }
}
