pipeline {
    agent any

    tools {
        jdk 'jdk21'
        maven 'maven3.8'
    }

    environment {
        SERVER_IP   = '13.61.175.251'
        SSH_CRED_ID = 'jenkins-weather'
        TOMCAT_SVC  = 'tomcat10'
        TOMCAT_PATH = '/var/lib/tomcat10/webapps'
        TOMCAT_USER = 'tomcat'
    }

    stages {

        stage('Check Environment') {
            steps {
                sh '''
                    java -version
                    mvn -version
                '''
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Shivamgarud8/tomcat.git'
            }
        }

        stage('Prepare WebApp') {
            steps {
                sh '''
                    mkdir -p src/main/webapp
                    cp -r WebContent/* src/main/webapp/ || true
                '''
            }
        }

        stage('Build WAR') {
            steps {
                sh '''
                    mvn clean package -DskipTests
                    ls -lh target/*.war
                '''
            }
        }

        stage('Auto Install & Deploy Tomcat') {
            steps {
                sshagent([SSH_CRED_ID]) {
                    sh '''
                        WAR_FILE=$(ls target/*.war | head -n 1)

                        scp -o StrictHostKeyChecking=no $WAR_FILE ubuntu@${SERVER_IP}:/tmp/app.war

                        ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP} << 'EOF'

                        set -e
                        echo "===== AUTO SETUP START ====="

                        # Install Tomcat if not installed
                        if ! systemctl list-units --type=service | grep -q tomcat10; then
                            echo "Installing Tomcat 10..."
                            sudo apt update
                            sudo apt install tomcat10 -y
                        fi

                        # Ensure directories exist
                        sudo mkdir -p /var/lib/tomcat10/webapps

                        # Stop Tomcat
                        sudo systemctl stop tomcat10 || true

                        # Clean old app
                        sudo rm -rf /var/lib/tomcat10/webapps/ROOT \
                                     /var/lib/tomcat10/webapps/ROOT.war

                        # Deploy new app
                        sudo mv /tmp/app.war /var/lib/tomcat10/webapps/ROOT.war
                        sudo chown tomcat:tomcat /var/lib/tomcat10/webapps/ROOT.war

                        # Start Tomcat
                        sudo systemctl start tomcat10
                        sudo systemctl enable tomcat10

                        echo "===== DEPLOYMENT DONE ====="
                        EOF
                    '''
                }
            }
        }

        stage('Health Check') {
            steps {
                sh '''
                    sleep 10
                    curl -I http://${SERVER_IP}:8080 || exit 1
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… ONE-CLICK DEPLOYMENT SUCCESS"
            echo "ðŸŒ App URL: http://${SERVER_IP}:8080/"
        }
        failure {
            echo "âŒ Deployment failed"
        }
    }
}
